//def host = '192.168.0.119'
pipeline {
  agent any
  environment { 
      host = '192.168.0.119'
    }
  
  stages {
    stage('Stage 1') {
      steps {
        echo 'hoest: ${host}'
        sh 'echo example 1'
        sh 'mvn clean test'
        }
      }
    stage('Stage 2') {
      steps {
        sh 'echo example 2'
        }
      }
    stage('Stage 3') {
      steps {
        sh 'echo example 3'
        }
      }
    stage('Stage 4') {
      steps {
        sh 'echo example 4'
        }
      }
    stage('Stage 5') {
      steps {
        sh 'echo example 5'
        }
      }
    stage('Stage 6 SUCCESS!!!') {
      steps {
        sh 'echo pipeline completed seccesfuly'
        }
      }
    }  
 }
